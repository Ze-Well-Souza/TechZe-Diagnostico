# TechZe-Diagnóstico - Local Development Environment
# Configurações simplificadas para desenvolvimento local

# =============================================================================
# AMBIENTE
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=dev-secret-key-for-local-testing

# =============================================================================
# SERVIDOR
# =============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000,http://127.0.0.1:8000

# =============================================================================
# SUPABASE (Opcional para desenvolvimento local)
# =============================================================================
# SUPABASE_URL=
# SUPABASE_ANON_KEY=
# SUPABASE_SERVICE_ROLE_KEY=

# =============================================================================
# DATABASE (SQLite para desenvolvimento local)
# =============================================================================
DATABASE_URL=sqlite:///./techze_local.db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=techze_local
DB_USER=postgres
DB_PASSWORD=
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# =============================================================================
# REDIS (Desabilitado para desenvolvimento local)
# =============================================================================
RATE_LIMIT_ENABLED=false
REDIS_URL=
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# MONITORAMENTO (Simplificado para desenvolvimento)
# =============================================================================
PROMETHEUS_ENABLED=false
ENABLE_METRICS=false
SENTRY_DSN=

# =============================================================================
# AI/ML (Opcional para desenvolvimento)
# =============================================================================
GOOGLE_AI_API_KEY=
OPENAI_API_KEY=

# =============================================================================
# SEGURANÇA (Configurações básicas para desenvolvimento)
# =============================================================================
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=6
MAX_LOGIN_ATTEMPTS=10
LOCKOUT_DURATION_MINUTES=5